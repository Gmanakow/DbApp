<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.AddTeacherActivity"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/addTeacherFirstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="FirstName:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addTeacherFirstNameInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addTeacherFirstNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/addTeacherLastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="LastName:"
        app:layout_constraintTop_toBottomOf="@id/addTeacherFirstNameInputTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addTeacherLastNameInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addTeacherLastNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/addTeacherSelectLanguageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Language"
        app:layout_constraintTop_toBottomOf="@id/addTeacherLastNameInputTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/addTeacherLanguageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/addTeacherSelectLanguageTextView"
        />

    <TextView
        android:id="@+id/addTeacherSelectProficiencyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Proficiency"
        app:layout_constraintTop_toBottomOf="@id/addTeacherLanguageSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/addTeacherProficiencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/addTeacherSelectProficiencyTextView"
        />

    <Button
        android:id="@+id/addTeacherActivityFinalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:onClick="onAddTeacherClick"
        android:text="Add Teacher"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        />

</androidx.constraintlayout.widget.ConstraintLayout>