<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.AddStudentActivity"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/addStudentFirstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="FirstName:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addStudentFirstNameInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addStudentFirstNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/addStudentLastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="LastName:"
        app:layout_constraintTop_toBottomOf="@id/addStudentFirstNameInputTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addStudentLastNameInputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/addStudentLastNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/addStudentSelectLanguageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Language"
        app:layout_constraintTop_toBottomOf="@id/addStudentLastNameInputTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/addStudentLanguageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/addStudentSelectLanguageTextView"
         />

    <TextView
        android:id="@+id/addStudentSelectProficiencyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Proficiency"
        app:layout_constraintTop_toBottomOf="@id/addStudentLanguageSpinner"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/addStudentProficiencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/addStudentSelectProficiencyTextView"
        />

    <TextView
        android:id="@+id/addStudentSelectPaymentFormTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="PaymentForm"
        app:layout_constraintTop_toBottomOf="@id/addStudentProficiencySpinner"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/addStudentPaymentFormSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/addStudentSelectPaymentFormTextView"
        />

    <Button
        android:id="@+id/addStudentActivityFinalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:onClick="onAddStudentClick"
        android:text="Add student"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        />
</androidx.constraintlayout.widget.ConstraintLayout>